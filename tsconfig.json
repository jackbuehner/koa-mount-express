{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": ".",
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": [
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.js"
  ]
}
